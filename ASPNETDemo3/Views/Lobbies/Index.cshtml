@model IEnumerable<ASPNETDemo3.Data.Lobby>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách sảnh</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-primary" asp-action="Create">+ Thêm mới</a>
</div>
<div class="card mt-2">
    <table class="table table-hover">
        <thead class="bg-primary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MinCountTable)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinCountTable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a class="text-warning" asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                        <a class="text-primary" asp-action="Details" asp-route-id="@item.Id">Xem</a> |
                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>